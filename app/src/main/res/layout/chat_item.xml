<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cita_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/nombreChat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Oscar Urueta"
                    android:textColor="@color/primaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mensajeChat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Â¿Puedo llegar antes?"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/fotoChat"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:src="@drawable/logoappointment" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>