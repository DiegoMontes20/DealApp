<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"

    android:background="@color/white"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        tools:context=".Login.LoginScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="141dp"
                android:layout_height="118dp"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="10sp"
                android:src="@drawable/logoappointment"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:letterSpacing="0.2"
                android:paddingLeft="20dp"
                android:text="@string/titulo"
                android:textColor="@color/white"
                android:textSize="50dp"

                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/esquinas_redondeadas"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editarInformacion"
                android:textColor="@color/secondary"
                android:textSize="40dp"
                android:layout_marginTop="15dp"

                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombres"
                android:textSize="20sp"
                android:textColor="@color/secondaryDark"
                android:layout_gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingTop="20dp"
                android:textStyle="bold"

                ></TextView>
            <EditText
                android:id="@+id/re_nombre"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apellidos"
                android:textSize="20sp"
                android:textColor="@color/secondaryDark"
                android:layout_gravity="center_vertical"
                android:paddingLeft="28dp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                ></TextView>
            <EditText
                android:id="@+id/re_apellidos"
                android:layout_width="350dp"
                android:inputType="text"

                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textSize="20sp"
                android:textColor="@color/secondaryDark"
                android:layout_gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingTop="20dp"
                android:textStyle="bold"

                ></TextView>
            <EditText
                android:id="@+id/re_telefono"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary"
                android:inputType="phone"
                />

            <Button
                android:id="@+id/guardar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary"
                android:background="@drawable/redondeocompleto"
                android:textColor="@color/white"
                android:layout_marginBottom="250dp"
                android:text="@string/guardarInformacion"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>